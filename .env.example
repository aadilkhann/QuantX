# QuantX - AI-Powered & Rule-Based Trading System

# Application
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-this-in-production

# Database
DATABASE_URL=postgresql://quantx:password@localhost:5432/quantx
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/quantx/app.log

# Data Providers
# Yahoo Finance (no key required)
YAHOO_FINANCE_ENABLED=true

# Alpha Vantage (get free key at https://www.alphavantage.co/support/#api-key)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
ALPHA_VANTAGE_ENABLED=false

# Polygon.io (paid service)
POLYGON_API_KEY=your-polygon-key
POLYGON_ENABLED=false

# Brokers
# Zerodha (Indian broker)
ZERODHA_API_KEY=your-zerodha-api-key
ZERODHA_API_SECRET=your-zerodha-api-secret
ZERODHA_ENABLED=false

# Interactive Brokers
IB_HOST=127.0.0.1
IB_PORT=7497
IB_CLIENT_ID=1
IB_ENABLED=false

# Binance (Crypto)
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret
BINANCE_ENABLED=false

# Backtesting
BACKTEST_MAX_CONCURRENT=10
BACKTEST_TIMEOUT=3600
BACKTEST_CACHE_ENABLED=true

# Risk Management
RISK_MAX_POSITION_SIZE=0.1
RISK_MAX_DAILY_LOSS=0.02
RISK_MAX_DRAWDOWN=0.15
RISK_MAX_LEVERAGE=1.0

# ML Models
ML_MODEL_PATH=./data/models
ML_CACHE_ENABLED=true
ML_GPU_ENABLED=false

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Feature Flags
FEATURE_LIVE_TRADING=false
FEATURE_OPTIONS_TRADING=false
FEATURE_CRYPTO_TRADING=true
